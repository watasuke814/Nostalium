<div class="modal fade" id="UserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
     <div class="modal-dialog" role="document">
          <div class="modal-content">

          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">User Profile</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="container">
               <div class="row">
                    <div class="col-md-6 left_img">
                        <br>
                        <%= image_tag @current_user.image_name.to_s %>
                    </div>
                    <div class="col-md-6 prof_right">
                        <h2><%= @current_user.name %></h2> 
                        <h6><%= @current_user.email %></h6>
                        <%= link_to "favorites: #{@current_user.favorites.count}", "/users/#{@current_user.id}/favorites", class: 'btn btn-primary' %>
                        <%= link_to "posts: #{@current_user.posts.count}", "/users/#{@current_user.id}/posts", class: 'btn btn-primary' %>
                    </div>
               </div>
               <div class="row">
                  <div class="col-md-12">
                     <%= link_to "edit", "/users/#{@current_user.id}/edit", class: 'btn btn-primary' %>
                  </div>
               </div>
          </div>

