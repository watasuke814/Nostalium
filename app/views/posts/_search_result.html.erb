<div class="post_card jscroll">
    <% @search_posts.each do |post| %>   
          <section class="card">
              <div class="card-content">
                  <div class="user">
                    <div class="user_item card-user_image">
                        <%= image_tag post.user.image_name.to_s %>
                    </div>
                    <p class="user_item">
                        <%= post.user.name %> 
                    </p>
                  </div>
                  </br> 
                  <p class="post_title">
                      <%= post.title %>
                  </p>
                  <div class="post_image">
                      <%= image_tag post.image_name.to_s %></br>
                  </div>
                  <p class="post_content">
                      <%= simple_format(post.content) %>
                  </p>
                  <div class="post_time">
                      <%= post.created_at %>
                  </div>
                  <div class="post_menus">
                      comment
                  </div>

                
                <% if post.favorited_by?(@current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
                    <p><span>お気に入り解除: </span><%=link_to post.favorites.count, post_favorites_path(post.id), method: :delete %></p>
                <% else %>
                    <p><span>お気に入り登録: </span><%=link_to post.favorites.count, post_favorites_path(post.id), method: :post %></p>
                <% end %>


              </div>
          </section>
    <% end %>
    <%= paginate @search_posts %>
</div>