<div class="posts-index">
    <div class="container">

        <%= render partial: 'post_form' %>
        <%= render partial: 'user_modal'%>

        <div class="post_card jscroll">
            <% @posts.each do |post| %>   
             <section class="card">
                  <div class="card-content">
                     <div class="user"> 
                        <div class="card-user_image user_item"><img src="<%= "/user_images/#{post.user.image_name}" %>"></div>
                        <p class="user_item"><%= post.user.name %></p>
                     </div></br>  
                      <p class="post_title"><%= post.title %></p>
                      <div class="post_image"><img src="<%= "/pic_images/#{post.image_name}" %>" class="card-img-top"></div></br>
                      <p class="post_content"><%= simple_format(post.content) %></p>
                  </div>
             </section>
           <% end %>
           <%= paginate @posts %>
        </div>
       
    </div>
</div>





    